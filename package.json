{
  "name": "software-jurisconnect",
  "version": "1.0.0",
  "description": "Sistema SaaS Desktop de Gestão de Correspondentes Jurídicos",
  "main": "src/main/main.js",
  "homepage": "http://./",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\"",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medeiros27/Software-JurisConnect.git"
  },
  "keywords": [
    "jurisconnect",
    "legal",
    "correspondentes",
    "jurídico",
    "desktop",
    "electron"
  ],
  "author": "JurisConnect Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medeiros27/Software-JurisConnect/issues"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.0.0",
    "lucide-react": "^0.292.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.30.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.1",
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "eslint": "^8.50.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.18",
    "vite": "^5.4.21",
    "vitest": "^0.34.6",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "build": {
    "appId": "com.jurisconnect.app",
    "productName": "JurisConnect",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "signingHashAlgorithms": [
        "sha256"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JurisConnect"
    }
  }
}
